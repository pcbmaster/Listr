<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table style="padding: 0 0.3em 0 0.3em;">
    <thead>
	<tr>
	    <th colspan="4"></th>
	</tr>
    </thead>

    <tbody>
	<% @lists.each do |list| %>
	    <tr>
		<td><h3><%= list.title %></h3></td>
		<td><%= list.description %></td>
		<td><%= list.type %></td>
		<td></td>
	    </tr>
	    <tr>
		<td><%= link_to 'Show', list_path(list) %></td>
		<td><%= link_to 'Edit', edit_list_path(list) %></td>
		<td><%= link_to 'Destroy', list_path(list), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<td></td>
	    </tr>
	<% end %>
    </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>
